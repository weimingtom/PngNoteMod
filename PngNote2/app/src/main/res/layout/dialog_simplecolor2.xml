<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/tab_pages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select color"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pngnote__colorButtonH"
                android:layout_gravity="center"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="8dip"
                android:baselineAligned="true"
                android:gravity="top"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/cbutton1"
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#2c988c"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/cbutton2"
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#3073aa"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cbutton3"
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#8b1a63"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cbutton4"
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#706559"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/cbutton5"
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#282425"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pngnote__colorButtonH"
                android:layout_gravity="center"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="8dip"
                android:baselineAligned="true"
                android:gravity="top"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    android:id="@+id/cbutton6"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#e2e2e2"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    android:id="@+id/cbutton7"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#db5832"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    android:id="@+id/cbutton8"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#81b845"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    android:id="@+id/cbutton9"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#ff0000"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="@dimen/pngnote__colorButtonW"
                    android:layout_height="@dimen/pngnote__colorButtonH"
                    android:layout_margin="@dimen/pngnote__colorButtonMargin"
                    android:layout_weight="1"
                    android:id="@+id/cbutton10"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/pngnote__colorButtonCW"
                        android:layout_height="@dimen/pngnote__colorButtonCH"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="#00ff00"
                        app:cardCornerRadius="@dimen/pngnote__colorButtonCW_half"
                        />

                </RelativeLayout>
            </LinearLayout>
















        </LinearLayout>
    </LinearLayout>

</LinearLayout>
